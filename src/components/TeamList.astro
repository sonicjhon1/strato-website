---

{
	Object.entries(team).map((role) => (
		<div class="m-5">
			<p class="text-lg text-black dark:text-white">{role[0]}</p>
			<div class="grid gap-6 pt-4 text-center md:grid-cols-4">
				{role[1].map((member) => (
					<div class="flex items-center overflow-hidden rounded-lg bg-gradient-to-b from-stone-200 to-stone-300 dark:from-zinc-800 dark:to-zinc-900">
						<div class="mx-3 w-[5rem] shrink-0 ">
							<img class="rounded-full" alt={member.name} src={member.avatar} />
						</div>
						<div>
							<div class="w-58 flex h-14 items-end">
								<div class="ml-1 mt-2">
									<div class="font-inter text-left text-2xl text-stone-600 dark:text-zinc-300">{member.name}</div>
								</div>
							</div>
							<div class="w-58 flex h-14 items-start">
								<div class="ml-1 mt-2">
									<a href={member.github} target="_blank">
										<BiGithub class="h-6 w-6 fill-stone-700 dark:fill-zinc-300" alt="Github profile" />
									</a>
								</div>
							</div>
						</div>
					</div>
				))}
			</div>
		</div>
	))
}
