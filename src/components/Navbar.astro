---
import BiDiscord from "../components/BiDiscord.astro";
import BiGithub from "../components/BiGithub.astro";
---

<nav class="mx-auto flex h-20 max-w-screen-xl items-center px-8">
	<a href="/" class="flex items-center">
		<img class="h-10 w-10 rounded-full" src="icons/strato-logo.svg" alt="Strato logo" />
		<div class="font-rubik flex flex-col px-4 font-medium">
			<div class="rounded-md text-xl text-gray-800 dark:text-white">Strato</div>
			<div class="rounded-md text-xs uppercase text-gray-500">Emulator</div>
		</div>
	</a>
	<div class="ml-12 flex flex-1 space-x-8 text-sm font-bold uppercase text-gray-500 dark:text-white max-sm:hidden">
		<a class="transition-colors duration-200 hover:text-gray-800 focus:outline-none dark:hover:text-blue-500 md:ml-2" href="/#">Home</a>
		<a class="transition-colors duration-200 hover:text-gray-800 focus:outline-none dark:hover:text-blue-500 md:ml-2" href="/#about">About</a>
		<a class="transition-colors duration-200 hover:text-gray-800 focus:outline-none dark:hover:text-blue-500 md:ml-2" href="/#team">Team</a>
		<a class="transition-colors duration-200 hover:text-gray-800 focus:outline-none dark:hover:text-blue-500 md:ml-2" href="/download">Download</a>
	</div>
	<div class="flex fill-gray-500 dark:fill-white max-sm:hidden">
		<a href="https://github.com/strato-emu/strato">
			<BiGithub
				src="icons/github-mark-white.svg"
				class="ml-2 h-9 w-9 rounded-full p-1 transition-colors duration-200 hover:fill-gray-800 focus:outline-none dark:hover:fill-blue-500"
				alt="Github project"
			/>
		</a>
		<a href="https://discord.gg/YhpdhVBmXX">
			<BiDiscord
				src="icons/discord-mark-white.svg"
				class="ml-2 h-9 w-9 rounded-full p-1 transition-colors duration-200 hover:fill-gray-800 focus:outline-none dark:hover:fill-blue-500"
				alt="Discord server"
			/>
		</a>
	</div>
  <div class="hidden ml-auto fill-gray-500 dark:fill-white max-sm:flex">
    hamburger icon (todo)
  </div>
</nav>
